<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redes.japo.updmulticast.GameControl">

    <ImageButton
        android:id="@+id/duck3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/user3_txt"
        app:layout_constraintRight_toRightOf="@+id/user3_txt"
        app:layout_constraintTop_toTopOf="@+id/user3_txt"
        app:srcCompat="@drawable/duckbutton" />

    <ImageButton
        android:id="@+id/duck1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/user1_txt"
        app:layout_constraintRight_toRightOf="@+id/user1_txt"
        app:layout_constraintTop_toTopOf="@+id/user1_txt"
        app:srcCompat="@drawable/duckbutton" />

    <ImageButton
        android:id="@+id/duck2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        app:layout_constraintLeft_toLeftOf="@+id/user2_txt"
        app:layout_constraintRight_toRightOf="@+id/user2_txt"
        app:layout_constraintTop_toTopOf="@+id/user2_txt"
        app:srcCompat="@drawable/duckbutton" />

    <TextView
        android:id="@+id/user1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_marginTop="25dp"
        android:text="Player1"
        app:layout_constraintRight_toLeftOf="@+id/user2_txt"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/user2_txt"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="25dp"
        android:text="Player2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/user3_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        android:text="Player3"
        app:layout_constraintLeft_toRightOf="@+id/user2_txt"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/stopGame_btn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="End Game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</android.support.constraint.ConstraintLayout>
